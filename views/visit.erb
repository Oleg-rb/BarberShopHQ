<h2>Записаться</h2>

<form action="/visit" method="POST">

  <div class="form-group">
    <label>Ваше имя</label>
    <input id="bbb" name="client[name]" type="text" class="form-control" placeholder="Введите Ваше имя" value="<%= @c.name %>">
  </div>

   <div class="form-group">
    <label>Номер Вашего телефона</label>
    <input name="client[phone]" type="text" class="form-control ccc" placeholder="Введите номер Вашего телефона" value="<%= @c.phone %>">
  </div>

   <div class="form-group">
    <label>Желаемые дата и время записи</label>
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" placeholder="Введите желаемые дату и время записи" value="<%= @c.datestamp %>">
  </div>

  <div class="form-group">
    <label for="barber">Выбор парикмахера</label>
      <select name="client[barber]" class="form-control ccc">
        <option value="">Выберите Вашего парикмахера</option>
            <% @barbers.each do |item| %>
                <option <%= @barber == item['name'] ? 'selected' : '' %>><%= item['name'] %></option>
            <% end %>
      </select>
  </div>

  <div class="form-group">
    <label>В какой цвет хотите себя окрасить:</label> <br />
      <select id="color" name="client[color]">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
      </select>
  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>
</form>

<script type="text/javascript">
  $(function() {
  $('#color').simplecolorpicker();
  $('#datetimepicker').datetimepicker();
})
</script>
